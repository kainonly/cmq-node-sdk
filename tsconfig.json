{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["ES7"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
